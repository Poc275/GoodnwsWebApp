@model GoodnwsWebApp.ViewModels.HomePageViewModel

@if (Model.Stories.Count() == 0)
{
    <p class="story">No more articles</p>
}
else
{
    @foreach (var article in Model.Stories)
    {
        var confidencePercentage = article.Confidence * 100;
        @if (String.IsNullOrEmpty(article.Image))
        {
            <article class="container story">
                <div class="row">
                    <div class="col-12 meta-data">
                        <small><i class="fas fa-tags"></i> @article.Source | <i class="far fa-clock"></i> @article.Date</small>
                    </div>
                    <div class="col-12">
                        <h3><a href="@article.Link" target="_blank">@Html.Raw(article.Title)</a></h3>
                    </div>
                    <div class="col-12">
                        <p>@article.Description</p>
                    </div>
                    <div class="col-12">
                        <p><i class="far fa-smile"></i> @confidencePercentage%</p>
                    </div>
                </div>
            </article>
        }
        else
        {
            <article class="container story">
                <div class="row">
                    <div class="col-12 meta-data">
                        <small><i class="fas fa-tags"></i> @article.Source | <i class="far fa-clock"></i> @article.Date</small>
                    </div>
                    <div class="col-md-6">
                        <h3><a href="@article.Link" target="_blank">@Html.Raw(article.Title)</a></h3>
                        <p>@article.Description</p>
                    </div>

                    <div class="col-md-6">
                        <a href="@article.Link" target="_blank">
                            <img src="@article.Image" alt="@article.Title" />
                        </a>
                    </div>

                    <div class="col">
                        <p><i class="far fa-smile"></i> @confidencePercentage%</p>
                    </div>
                </div>
            </article>
        }
    }
}